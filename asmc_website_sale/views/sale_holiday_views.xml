<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tree_sale_holiday" model="ir.ui.view">
            <field name="name">sale.holiday.tree</field>
            <field name="model">sale.holiday</field>
            <field name="arch" type="xml">
                <tree string="Holidays">
                    <field name="name"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <record id="view_form_sale_holiday" model="ir.ui.view">
            <field name="name">sale.holiday.form</field>
            <field name="model">sale.holiday</field>
            <field name="arch" type="xml">
                <form string="Holiday">
                    <sheet>
                        <h1>
                            <field name="name" placeholder="e.g. Christmas"/>
                        </h1>
                        <group>
                            <group>
                                <field name="date"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>