<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inheriting the sale form to add button in case of delivery from amazon-->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.exit.light.deliver.multiple.warehouses</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="deliveries_generated"/>
                <field name="amazon_order_ref" attrs="{'invisible':True}"/>
                <field name="website_id" attrs="{'invisible':True}"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="before">
                <button name="generate_deliveries" type="object" string="Generate Deliveries" class="my_class"
                        attrs="{'invisible': ['|', '&amp;', ('amazon_order_ref','=', False),('website_id','=', False),('deliveries_generated','=',True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>