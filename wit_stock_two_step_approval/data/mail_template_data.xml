<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="wit_mail_template_receipt_validation_purchase" model="mail.template">
        <field name="name">Wit Games: Receipt - Send by Email (Purchase User)</field>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="subject">Transfer {{object.name or 'n/a'}} Validated</field>
        <field name="body_html" type="html">
            <div>
                Transfer <t t-out="object.name"/> has been validated!<br/><br/>
                <div style="margin: 16px 0px 16px 0px;">
                    <a t-att-href="'/web#id=%s&#38;model=stock.picking' % object.id" style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">View Transfer</a>
                </div>
            </div>
        </field>
        <field name="auto_delete" eval="True"/>
    </record>

    <record id="wit_mail_template_receipt_validation_sale" model="mail.template">
        <field name="name">Wit Games: Receipt - Send by Email (Sale User)</field>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="subject">{{object.name or 'n/a'}} Received</field>
        <field name="body_html" type="html">
            <div>
                Products have been received!<br/><br/>
                <div style="margin: 16px 0px 16px 0px;">
                    <a t-att-href="'/web#id=%s&#38;model=stock.picking' % object.id" style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">View Transfer</a>
                </div>
            </div>
        </field>
        <field name="report_template" ref="stock.action_report_delivery"/>
        <field name="report_name">{{(object.name or '').replace('/','_')}}</field>
        <field name="auto_delete" eval="True"/>
    </record>

</odoo>
